@page "/sown/{id}"
<h3>@Crop.LocationYear</h3>
<div class="flex ">			
		<Div class="col col-md-4">
		<h2>Sown Plants</h2>
		<ListGroup >
				@foreach(var item in @Crop.Sowed)
				{		
                    <SownItemListCard SownItem="@item" DeleteSown="@DeleteSown" EditSown="@OpenEditModal"/>
				}
		</ListGroup>
		</Div>
			<Div>
				@*image of the plot location*@
			</Div>
</div>
   <RemoveItemModal @ref="DeleteSownModal" Item="@ItemToRemove" ConfirmDelete="RemoveSown"/> 
   <EditSownModal @ref="EditModal" SownItem="EditItem" CloseModal="@CloseEditModal" /> 



