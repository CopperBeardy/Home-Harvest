@page "/"
<h3>Index</h3>

<Button Clicked="ShowModal">Show</Button>
@code {
    [CascadingParameter]
		public IModalService Modal { get; set; }

        public async void ShowModal()
        {
            var options = new ModalOptions()
        {
            HideCloseButton = true
    };
          var parameters = new ModalParameters();
        parameters.Add("Plant", new PlantDto() { Name = "test", Id = 2, Genus = Genus.Tree, GrowInWeeks = 10 });
        var result =  Modal.Show<EditPlant>("Edit Plant",parameters,options);
    }
}
